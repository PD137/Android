<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/c"
    android:orientation="vertical">
    <!--android:background="#F2F2F2"-->
    <!--tools:context=".mine.MineFragment"   tools:context=".MainActivity"-->
    <com.hyphenate.easeui.widget.EaseTitleBar
        app:titleBarTitle="Mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.hyphenate.easeui.widget.EaseTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#F2F2F2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/person_data" />

            <TextView
                android:id="@+id/tv_setting_persondata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="个人资料"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/bt_setting_out"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="退出"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <!--android:textAllCaps="false"不强制显示大写-->


</LinearLayout>


